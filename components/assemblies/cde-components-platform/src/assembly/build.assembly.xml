<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
  <id>cde</id>
  <formats>
    <format>dir</format>
  </formats>

  <includeBaseDirectory>false</includeBaseDirectory>

  <fileSets>
    <fileSet>
      <directory>${project.build.directory}/dependency/cde/components</directory>
      <outputDirectory>cde/components</outputDirectory>
    </fileSet>
    <!-- CDF dependencies, including only the ones required speeds up the build -->
    <!--fileSet>
      <directory>${project.build.directory}/dependency/cdf/js/lib</directory>
      <outputDirectory>cdf/lib</outputDirectory>
    </fileSet-->
    <fileSet>
      <directory>${project.build.directory}/dependency/cdf/js/lib/require-css</directory>
      <outputDirectory>cdf/lib/require-css</outputDirectory>
    </fileSet>
    <fileSet><directory>${project.build.directory}/dependency/cdf/js/lib/require-amd</directory>
      <outputDirectory>cdf/lib/require-amd</outputDirectory>
    </fileSet>
    <fileSet><directory>${project.build.directory}/dependency/cdf/js/lib/require-dashboard</directory>
      <outputDirectory>cdf/lib/require-dashboard</outputDirectory>
    </fileSet>
    <fileSet><directory>${project.build.directory}/dependency/cdf/js/lib/require-text</directory>
      <outputDirectory>cdf/lib/require-text</outputDirectory>
    </fileSet>
    <fileSet><directory>${project.build.directory}/dependency/cdf/js/lib/Raphael</directory>
      <outputDirectory>cdf/lib/Raphael</outputDirectory>
    </fileSet>
    <fileSet><directory>${project.build.directory}/dependency/cdf/js/lib/jQuery</directory>
      <outputDirectory>cdf/lib/jQuery</outputDirectory>
    </fileSet>
    <fileSet><directory>${project.build.directory}/dependency/cdf/js/lib/fancybox</directory>
      <outputDirectory>cdf/lib/fancybox</outputDirectory>
    </fileSet>
    <fileSet><directory>${project.build.directory}/dependency/cdf/js/lib/backboneTreemodel</directory>
      <outputDirectory>cdf/lib/backboneTreemodel</outputDirectory>
    </fileSet>
    <fileSet><directory>${project.build.directory}/dependency/cdf/js/lib/baseEvents</directory>
      <outputDirectory>cdf/lib/baseEvents</outputDirectory>
    </fileSet>
    <fileSet><directory>${project.build.directory}/dependency/cdf/js/lib/baseSelectionTree</directory>
      <outputDirectory>cdf/lib/baseSelectionTree</outputDirectory>
    </fileSet>
    <fileSet><directory>${project.build.directory}/dependency/cdf/js/lib/backbone</directory>
      <outputDirectory>cdf/lib/backbone</outputDirectory>
    </fileSet>
    <fileSet><directory>${project.build.directory}/dependency/cdf/js/lib/underscore</directory>
      <outputDirectory>cdf/lib/underscore</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/dependency/cdf/js/lib/OpenMap/OpenLayers/theme/default</directory>
      <outputDirectory>cdf/lib/OpenMap/OpenLayers/theme/default</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/dependency/cdf/js/components</directory>
      <includes>
        <include>CggComponent.ext.js</include>
      </includes>
      <outputDirectory>cdf/components</outputDirectory>
    </fileSet>
  </fileSets>
</assembly>

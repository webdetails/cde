<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.pentaho.ctools</groupId>
    <artifactId>cde-webclient-impls</artifactId>
    <version>11.0.0.0-SNAPSHOT</version>
  </parent>
  <artifactId>cde-webclient-impls-pentaho</artifactId>
  <packaging>pom</packaging>
  <description>Pentaho Community Dashboard Editor Webclient Pentaho Server Implementation</description>
  <properties>
    <js.project.list>cde-webclient-impls-core,jquery,underscore</js.project.list>
  </properties>
  <dependencies>
    <dependency>
      <groupId>org.pentaho.ctools</groupId>
      <artifactId>cde-webclient-impls-core</artifactId>
      <version>${project.version}</version>
      <type>zip</type>
    </dependency>
    <dependency>
      <groupId>org.webjars.npm</groupId>
      <artifactId>underscore</artifactId>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <!-- copy jquery for tests -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-resources-plugin</artifactId>
        <executions>
          <execution>
            <id>copy-javascript-dependencies</id>
            <phase>generate-test-resources</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <outputDirectory>${project.build.directory}/test-javascript</outputDirectory>
              <resources>
                <resource>
                  <directory>${project.build.directory}/dependency/cde</directory>
                </resource>
              </resources>
            </configuration>
          </execution>
          <execution>
            <id>copy-jquery</id>
            <phase>${javascript_unpack-dependencies-phase}</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <outputDirectory>${project.basedir}/src/test/javascript/lib</outputDirectory>
              <resources>
                <resource>
                  <directory>${webjars.target.directory}/jquery/${jquery.version}/dist</directory>
                  <includes>
                    <include>jquery.js</include>
                  </includes>
                </resource>
              </resources>
            </configuration>
          </execution>
          <execution>
            <id>copy-underscore</id>
            <phase>${javascript_unpack-dependencies-phase}</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <outputDirectory>${project.basedir}/src/test/javascript/lib</outputDirectory>
              <resources>
                <resource>
                  <directory>${webjars.target.directory}/underscore/${underscore.version}</directory>
                  <includes>
                    <include>underscore.js</include>
                  </includes>
                </resource>
              </resources>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-clean-plugin</artifactId>
        <configuration>
          <filesets>
            <fileset>
              <directory>${project.basedir}/src/test/javascript/lib</directory>
              <includes>
                <include>jquery.js</include>
                <include>underscore.js</include>
              </includes>
            </fileset>
          </filesets>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>

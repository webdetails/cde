<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.pentaho.ctools</groupId>
    <artifactId>cde-webclient-impls</artifactId>
    <version>10.3.0.0-SNAPSHOT</version>
  </parent>
  <artifactId>cde-webclient-impls-core</artifactId>
  <packaging>pom</packaging>
  <description>Pentaho Community Dashboard Editor Webclient Core Implementation</description>

  <properties>
    <js.project.list>jquery,underscore</js.project.list>
    <!--karma.file.config>karma.conf.js</karma.file.config-->
  </properties>

  <dependencies>
    <dependency>
      <groupId>org.webjars.npm</groupId>
      <artifactId>jquery</artifactId>
    </dependency>
    <dependency>
      <groupId>org.webjars.npm</groupId>
      <artifactId>underscore</artifactId>
    </dependency>
  </dependencies>

  <!-- copy jquery for tests -->
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-resources-plugin</artifactId>
        <executions>
          <execution>
            <id>copy-jquery</id>
            <phase>${javascript_unpack-dependencies-phase}</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <outputDirectory>${project.basedir}/src/test/javascript/lib</outputDirectory>
              <resources>
                <resource>
                  <directory>${webjars.target.directory}/jquery/${jquery.version}/dist</directory>
                  <includes>
                    <include>jquery.js</include>
                  </includes>
                </resource>
              </resources>
            </configuration>
          </execution>
          <execution>
            <id>copy-jquery-min</id>
            <phase>${javascript_unpack-dependencies-phase}</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <outputDirectory>${project.basedir}/src/test/javascript/lib/ace</outputDirectory>
              <resources>
                <resource>
                  <directory>${webjars.target.directory}/jquery/${jquery.version}/dist</directory>
                  <includes>
                    <include>jquery.min.js</include>
                  </includes>
                </resource>
              </resources>
            </configuration>
          </execution>
          <execution>
            <id>copy-underscore</id>
            <phase>${javascript_unpack-dependencies-phase}</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <outputDirectory>${project.basedir}/src/test/javascript/lib</outputDirectory>
              <resources>
                <resource>
                  <directory>${webjars.target.directory}/underscore/${underscore.version}</directory>
                  <includes>
                    <include>underscore.js</include>
                  </includes>
                </resource>
              </resources>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-clean-plugin</artifactId>
        <configuration>
          <filesets>
            <fileset>
              <directory>${project.basedir}/src/test/javascript/lib</directory>
              <includes>
                <include>ace/jquery.min.js</include>
                <include>jquery.js</include>
                <include>underscore.js</include>
              </includes>
            </fileset>
          </filesets>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>

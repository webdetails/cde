<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.pentaho.ctools</groupId>
    <artifactId>cde-plugin-assemblies-platform</artifactId>
    <version>8.1.0.0-SNAPSHOT</version>
  </parent>
  <artifactId>pentaho-cdf-dd</artifactId>
  <packaging>pom</packaging>
  <description>Pentaho Community Dashboard Editor plugin for the Platform Server</description>
  <properties>
    <js.project.list>
      cde-components-platform,cde-webclient-impls-core,cde-webclient-impls-pentaho
    </js.project.list>
    <ant-contrib.version>1.0b3</ant-contrib.version>
  </properties>
  <dependencies>
    <dependency>
      <groupId>org.pentaho.ctools</groupId>
      <artifactId>cde-components-platform</artifactId>
      <version>${project.version}</version>
      <type>zip</type>
      <exclusions>
        <exclusion>
          <artifactId>*</artifactId>
          <groupId>*</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>org.pentaho.ctools</groupId>
      <artifactId>cde-webclient-impls-core</artifactId>
      <version>${project.version}</version>
      <type>zip</type>
      <exclusions>
        <exclusion>
          <artifactId>*</artifactId>
          <groupId>*</groupId>
        </exclusion>
      </exclusions>
    </dependency><dependency>
    <groupId>org.pentaho.ctools</groupId>
    <artifactId>cde-webclient-impls-pentaho</artifactId>
    <version>${project.version}</version>
    <type>zip</type>
    <exclusions>
      <exclusion>
        <artifactId>*</artifactId>
        <groupId>*</groupId>
      </exclusion>
    </exclusions>
  </dependency>
    <dependency>
      <groupId>pentaho</groupId>
      <artifactId>cpf-core</artifactId>
    </dependency>
    <dependency>
      <groupId>pentaho</groupId>
      <artifactId>cpf-pentaho</artifactId>
    </dependency>
    <dependency>
      <groupId>org.pentaho.ctools</groupId>
      <artifactId>cde-core-impl</artifactId>
      <version>${project.version}</version>
      <scope>runtime</scope>
      <exclusions>
        <exclusion>
          <artifactId>*</artifactId>
          <groupId>*</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>org.pentaho.ctools</groupId>
      <artifactId>cde-pentaho-impl</artifactId>
      <version>${project.version}</version>
      <scope>runtime</scope>
      <exclusions>
        <exclusion>
          <artifactId>*</artifactId>
          <groupId>*</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>net.sf.ezmorph</groupId>
      <artifactId>ezmorph</artifactId>
      <scope>runtime</scope>
    </dependency>
  </dependencies>
  <build>
    <filters>
      <filter>${basedir}/src/main/filters/editor.includes.core.properties</filter>
      <filter>${basedir}/src/main/filters/editor.includes.pentaho.properties</filter>
    </filters>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-resources-plugin</artifactId>
        <executions>
          <execution>
            <id>copy-resources</id>
            <phase>process-resources</phase>
            <goals>
              <goal>resources</goal>
            </goals>
          </execution>
        </executions>
        <dependencies>
          <dependency>
            <groupId>org.apache.maven.shared</groupId>
            <artifactId>maven-filtering</artifactId>
            <version>${maven-filtering.version}</version>
          </dependency>
        </dependencies>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <id>process-cde-webclient-resources</id>
            <phase>process-resources</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <target>
                <taskdef resource="net/sf/antcontrib/antlib.xml" classpathref="maven.compile.classpath"/>
                <property file="${project.build.directory}/classes/editor.includes.properties"/>
                <!-- JavaScript -->
                <touch file='${project.build.directory}/classes/resources/scripts.html'/>
                <for list='${scripts}' param='filename'>
                  <sequential>
                    <echo file='${project.build.directory}/classes/resources/scripts.html'
                          append='true'>&lt;script language="javascript" type="text/javascript" src="#{WEBAPP_PATH}@{filename}"/&gt;&lt;/script&gt;${line.separator}</echo>
                  </sequential>
                </for>
                <!-- CSS -->
                <touch file='${project.build.directory}/classes/resources/styles.html'/>
                <for list='${styles}' param='filename'>
                  <sequential>
                    <echo file='${project.build.directory}/classes/resources/styles.html'
                          append='true'>&lt;link href="#{WEBAPP_PATH}@{filename}" rel="stylesheet" type="text/css"/&gt;${line.separator}</echo>
                  </sequential>
                </for>
              </target>
            </configuration>
          </execution>
        </executions>
        <dependencies>
          <dependency>
            <groupId>ant-contrib</groupId>
            <artifactId>ant-contrib</artifactId>
            <version>${ant-contrib.version}</version>
            <exclusions>
              <exclusion>
                <groupId>ant</groupId>
                <artifactId>ant</artifactId>
              </exclusion>
            </exclusions>
          </dependency>
        </dependencies>
      </plugin>
    </plugins>
  </build>
</project>
